<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".AddTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_bar_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp">


            <ImageView
                android:id="@+id/addTask_backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true"
                android:elevation="30dp"
                android:focusable="true"
                android:src="@drawable/back_arrow"
                app:tint="@color/red" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:text="@string/add_task"
                android:textAlignment="center"
                android:textColor="@color/my_primary"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/addtaskLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/show_task_background"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textAlignment="center"
                    android:text="@string/task_name"/>

                <EditText
                    android:id="@+id/inputTaskName"
                    android:hint="@string/task_name"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/description"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.1"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>


                <EditText
                    android:id="@+id/taskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="7dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/task_description"
                    android:padding="15dp" />

                <Button
                    android:id="@+id/addTaskBtn"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/add_task"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_margin="5dp"
                    app:tint="@color/my_primary"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/successlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:elevation="50dp"
                android:background="@drawable/success_background"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/success_icon2"
                    app:tint="@color/green"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/success_message"
                    android:textStyle="normal"
                    android:textColor="@color/green"
                    android:letterSpacing="0.09"
                    android:textSize="20sp"
                    android:layout_marginBottom="30dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/under_view"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/under_background_view"/>

</RelativeLayout>